/* See: https://github.com/vitejs/vite/blob/main/packages/create-vite/template-vanilla-ts/tsconfig.json */
/* See: https://github.com/vitejs/vite/blob/main/packages/create-vite/template-vue-ts/tsconfig.app.json */
/* See: https://github.com/vuejs/tsconfig/blob/main/tsconfig.json */
/* See: https://github.com/vuejs/tsconfig/blob/main/tsconfig.dom.json */
/* See: https://github.com/vuejs/tsconfig/blob/main/tsconfig.lib.json */

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",

    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,

    // By default this is set to `true` because of `moduleResolution:bundler`.
    //  This is not exactly incorrect, but we disable it in favor of explicitness.
    "allowSyntheticDefaultImports": false,

    // Allowed but not needed.
    "allowImportingTsExtensions": false
  }
}
